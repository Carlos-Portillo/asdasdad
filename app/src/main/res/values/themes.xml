<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AVANZOTestSimulator" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
       </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
    <!-- Estilo para la tipografía Ubuntu -->
    <style name="UbuntuFont" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/ubuntu_m</item>
    </style>

    <!-- Estilo para la tipografía Roboto -->
    <style name="RobotoFont" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/roboto_bold</item>

    </style>



</resources>